<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/app_background"
    android:id="@+id/linear_layout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/app_background"
        android:id="@+id/item_view">

        <TextView
            android:id="@+id/sub_breed_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="1dp"
            android:textColor="@color/text_color"/>

        <TextView
            android:id="@+id/details"
            android:text="@string/breed_photo_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/text_color"
            android:layout_below="@+id/photo3sub"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/photo1sub"
            android:layout_marginStart="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/sub_breed_name"
            android:padding="2dp"/>


        <ImageView
            android:id="@+id/photo2sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub_breed_name"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/photo1sub"
            android:padding="2dp" />

        <ImageView
            android:id="@+id/photo3sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sub_breed_name"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/photo2sub"
            android:padding="2dp" />


    </RelativeLayout>


</LinearLayout>